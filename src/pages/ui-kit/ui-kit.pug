                        .block-container__row
                            +button({buttonContent: 'Перейти к оплате',classType:'button-arrow'})
                    .block-container__pagination
                        +block-description('Pagination','')
                        +pagination('1')
                    .block-container
                        +block-description('Dropdown','Default')
                        +dropdown-item({
                            btnClass: "dropdown__dropbtn dropdown-guests",
                            name: "Сколько гостей",
                            show: 'dropdown-content__show'
                        })
                            +Btn({btnName: "Взрослые", inputClass: "adult", inputValue: "2"})
                            +Btn({btnName: "Дети", inputClass: "child", inputValue: "1"})
                            +Btn({btnName: "Младенцы", inputClass: "baby", inputValue: "0"})
                            .form-elements__btn-container
                                button.clear очистить
                                button.submit применить
                    .block-container__bullet-list
                        +block-description('Bullet-list','')
                        +bullet-list('Нельзя с питомцами')
                        +bullet-list('Без вечеринок и мероприятий')
                        +bullet-list('Время прибытия — после 13:00,\n' +
                        'а выезд до 12:00')
                .form-elements__container-forth
                    +review({
                        img:'img/man.jpg',
                        likeValue:'12',
                        name:'Мурад Сарафанов',
