include ../../../src/components/text-type/text-type.pug
include ../../../src/components/text-type/example-type.pug
include ../../../src/components/input/input.pug
include ../../components/block-description/block-description
include ../../../src/components/dropdown/dropdown.pug
include ../../../src/components/dropdown/dropdownBtn.pug
include ../../../src/components/date-mask/date-mask.pug
include ../../../src/components/dropdown-btn/dropdown-btn.pug
include ../../../src/components/calculator/calculator.pug
include ../../../src/components/checkbox-list/checkbox-list.pug
include ../../../src/components/checkbox-button/checkbox-button.pug
include ../../../src/components/info-hotel-room/info-hotel-room.pug
include ../../../src/components/radio-buttons/radio-buttons.pug
