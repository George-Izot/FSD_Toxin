        section.form-elements.ui-kit__section
            .form-elements__container.form-elements__container-first
                .block-container
                    +block-description('Text Field','Default')
                    +input({
                        type: 'email',
                        placeholderValue: 'Email',
                        className: 'input-component'
                    })
                .block-container
                    +block-description('Text Field','Hover / Focus')
                    +input({
                        type:'text',
                        placeholderValue:'This is pretty awesome',
                        className:'input-component  input-component__hover'
                    })
                .block-container
                    +block-description('Dropdown','Default')
                    +dropdown-item({btnClass:"dropdown__dropbtn dropdown-guests",name:"Сколько гостей"})
                        +Btn({ btnName:"Взрослые",inputClass:"adult",inputValue:"0"})
                        +Btn({ btnName:"Дети",inputClass:"child",inputValue:"0"})
                        +Btn({ btnName:"Младенцы",inputClass:"baby",inputValue:"0"})
                        .form-elements__btn-container
                            button.clear очистить
                            button.submit применить
                .block-container
                    +block-description('masked text field','Default')
                    +date-mask("date-mask")
                .block-container    
                    +date-dropdown({
                        descriptionFirst:'date Dropdown',
                        descriptionSecond:'date Dropdown'
                    })
                        
                .block-container
                    +block-description('filter date dropdown','')
                    .short-container.short-container__datepicker
                        +date-mask("date-mask date-dropdown datepicker-here single")
                        
                .block-container
                    +block-description('subscription text field')
                        .short-container
                            +input({
                                type: 'email',
                                placeholderValue: 'Email',
                                className: 'input-component input-component__arrow-right'
                                })
                .block-container
                    +block-description('dropdown','Default')
                    .short-container
                        +dropdown-item({btnClass:"dropdown__dropbtn dropdown__dropbtn-short ",name:'',dropClass:"dropdown-services"})
                            +Btn({ btnName:"спальни",inputClass:"3",inputValue:"3"})
                            +Btn({ btnName:"кровати",inputClass:"4",inputValue:"4"})
                            +Btn({ btnName:"ванные комнаты",inputClass:"3",inputValue:"3"})
                .block-container
                    +block-description('dropdown','expanded')
                    .short-container
                        +dropdown-item({btnClass:"dropdown__dropbtn dropdown__dropbtn-short",name:'',dropClass:"dropdown-services",show:'dropdown-content__show'})
                            +Btn({ btnName:"спальни",inputClass:"1",inputValue:"2"})
                            +Btn({ btnName:"кровати",inputClass:"2",inputValue:"2"})
                            +Btn({ btnName:"ванные комнаты",inputClass:"3",inputValue:"0"})
                .block-container.block-container__checkbox-list
                    +checkbox-list({parameters:[{title:"Завтрак",id:"breakfast"},
                                    {title:"Письменный стол",id:"table",checked:true},
                                    {title:"Стул для кормления",id:"chair",checked:true},
                                    {title:"Кроватка",id:"crib",checked:true},
                                    {title:"Телевизор",id:"tv"},
                                    {title:"Шампунь",id:"shampoo"},]})
                    +checkbox-list({parameters:[
                                    {title:"Завтрак",id:"breakfast1"},
                                    {title:"Письменный стол",id:"table1",checked:true},
                                    {title:"Стул для кормления",id:"chair1",checked:true},
                                    {title:"Кроватка",id:"crib1",checked:true},
                                    {title:"Телевизор",id:"tv1"},
                                    {title:"Шампунь",id:"shampoo1"},
                                    {title:"Телевизор",id:"tv2"},
                                    {title:"Шампунь",id:"shampoo2"}
                                    ]}
                                    )
                .block-container.block-container__info-hotel-room
                    +info-hotel-room({icon:'insert_emoticon',title:'Комфорт',description:'Шумопоглощающие стены'})
                .block-container
                    +info-hotel-room({icon:'location_city',title:'Удобство',description:'Окно в каждой из спален'})
            .row__container
                .form-elements__container.form-elements__container-second
                    .block-container
                        +block-description('Checkbox Buttons','')
                        +checkbox-button({title: "Можно курить", id: "smoke"})
                        +checkbox-button({title: "Можно с питомцами", id: "pet",checked:true})
                        +checkbox-button({title: "Можно пригласить гостей (до 10 человек)", id: "guests",checked:true})
                    .block-container
                        +block-description('Radio Buttons','')
                        .block-container__radio-button
                            +radio-button({radioName:'gender',radioText:'Мужчина',radioValue:'male',checked:'checked'})
                            +radio-button({radioName:'gender',radioText:'Женщина',radioValue:'female'})
                    .block-container
                        +block-description('Toggle','')
                        .block-container__toggle
                            +toggle({toggleText:"Получать спецпредложения",checked:'checked'})
                        .block-container__toggle
                            +toggle({toggleText:"Получать спецпредложения"})
                    .block-container
                        +block-description('like button','')
                        .block-container__like-button
                            +like-button({ likeValue:'2'})
                            +like-button({likeValue:'12'})
                    .block-container__rate-button
                        +block-description('rate button','')
                        .block-container__row
                            +rate-buttons('4','5')
                            +rate-buttons('5','5')
                    .block-container
                        +block-description('Dropdown','Default')
                        +dropdown-item({btnClass: "dropdown__dropbtn dropdown-guests", name: "Сколько гостей",show:'dropdown-content__show'})
                            +Btn({btnName: "Взрослые", inputClass: "adult", inputValue: "0"})
                            +Btn({btnName: "Дети", inputClass: "child", inputValue: "0"})
                            +Btn({btnName: "Младенцы", inputClass: "baby", inputValue: "0"})
                            .form-elements__btn-container
                                button.clear очистить
                                button.submit применить
                    .block-container.block-container__rich-checkbox
                        +block-description('Checkbox Buttons','')
                        +checkbox-button({title: "Широкий коридор",description:'Ширина коридоров в номере не менее 91 см.', id: "wideHall"})
                        +checkbox-button({title: "Помощник для инвалидов",description:'На 1 этаже вас встретит специалист  и проводит до номера.', id: "assistant"})
                .form-elements__container.form-elements__container-second
                    .range__container
                        +range-slider({name:'Range Slider'})   
                    .block-container
                        +block-description('Buttons','')
                        .block-container__row
                            +button({buttonContent:'Click Me',classType:'button-standard',})
                            +button({buttonContent:'Click Me',classType:'button-standard',disabled:true})
                        .block-container__row
                            +button({buttonContent: 'Click Me',classType:'button-border',})
                            +button({buttonContent: 'Click Me',classType:'button-border', disabled: true})
                        .block-container__row
                            +button({buttonContent: 'Click Me',classType:'button-link', })
